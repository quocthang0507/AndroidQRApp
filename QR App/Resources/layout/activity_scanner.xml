<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_margin="20dp"
        android:id="@+id/imgScan"
        android:src="@drawable/qr_code"
        android:contentDescription="@string/descriptionScan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnQScan"
            android:text="@string/btnQScan"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/descriptionScan" />
        <Button
            android:id="@+id/btnSScan"
            android:text="@string/btnSScan"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/descriptionScan" />

    </LinearLayout>
    <Button
        android:id="@+id/btnScanImage"
        android:text="@string/btnScanImage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/descriptionScan" />

</LinearLayout>
